<h1 class="page-heading">Блог Пости <%= removable_tag_name %></h1>

<div class="collapse" id="showMoreTags" aria-expanded="false">
  <%= render "post_tags", tags: @all_tags %>
</div>
<p class="text-end collapse-tags-link">
  <a class="collapsed" data-bs-toggle="collapse" href="#showMoreTags" role="button" aria-expanded="false" aria-controls="showMoreTags">
    категорії
  </a>
</p>

<%= render partial: "post_thumb", collection: @posts, as: :post %>

<%= paginate @posts, window: 1 %>

<%= link_to "Create new post", new_post_path %>