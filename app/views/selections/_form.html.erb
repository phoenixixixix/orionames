<%= form_with model: @selection do |f| %>
  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :names %>
        <%=
          f.collection_select :names,
                              Name.order(:capital_letter),
                              :id, :title,
                              { include_hidden: false },
                              { multiple: true, size: 18, class: "form-select mb-2" }
        %>
      </div>

      <%= f.submit "Save", class: "btn btn-primary mt-3" %>
    </div>
  </div>
<% end %>