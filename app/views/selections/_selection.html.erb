<div class="col mb-3">
  <div class="selection">
    <h4 class="mb-3"><%= selection.title %></h4>
    <ul class="list-group list-group-flush">
      <% selection.names.each do |id, name| %>
        <li class="list-group-item list-group-item-selection plain-text"> > <%= link_to name, name_path(id), class: "text-dark" %></li>
      <% end %>
    </ul>
  </div>
</div>