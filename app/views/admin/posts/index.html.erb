<h1 class="page-heading">Пости</h1>

<p style="color: green"><%= notice %></p>

<%= link_to "Додати пост", new_admin_post_path, class: "btn btn-action" %>

<table class="table">
  <thead class="table-dark">
  <tr>
    <th scope="col">Назва</th>
    <th scope="col"></th>
    <th scope="col"></th>
  </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <th><%= link_to post.title, post_path(post) %></th>
      <td><%= link_to "Edit", edit_admin_post_path(post) %></td>
      <td><%= button_to "Delete", admin_post_path(post), method: :delete, class: "btn-destroy" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
