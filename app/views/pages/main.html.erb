<%= render "shared/search_field" %>

<div class="main-page-block">
  <h1>Пошук</h1>

  <div class="mb-5">
    <% @categories.each do |category| %>
      <%= link_to category, names_path(by_category: category), class: "btn btn-plain" %>
    <% end %>
  </div>

  <div class="mb-5">
    <h4 class="mb-3">За алфавітом</h4>
    <% @alphabet.each do |letter| %>
      <%= link_to letter, names_path(by_letter: letter), class: "btn btn-plain btn-letter" %>
    <% end %>
  </div>

  <div class="mb-5">
    <h4 class="mb-3">За походженням</h4>
    <% @origin_countries.each do |origin| %>
      <%= link_to origin.uk_title_plural, names_path(by_origin: origin.id), class: "btn btn-plain" %>
    <% end %>
  </div>

  <div class="text-center">
    <%= link_to "До списку всіх імен", names_path, class: "btn btn-action" %>
  </div>
</div>

<div class="main-page-block">
  <h1>Підбірки</h1>

  <div class="row">
    <div class="col-sm-6">
      <h4 class="mb-3"><%= @selection_first.title %></h4>
      <ul class="list-group list-group-flush">
        <% @selection_first.names.each do |id, name| %>
          <li class="list-group-item list-group-item-popular plain-text"> > <%= link_to name, name_path(id), class: "text-dark" %></li>
        <% end %>
      </ul>
    </div>

    <div class="col-sm-6">
      <h4 class="mb-3"><%= @selection_last.title %></h4>
      <ul class="list-group list-group-flush">
        <% @selection_last.names.each do |id, name| %>
          <li class="list-group-item list-group-item-popular plain-text"> > <%= link_to name, name_path(id), class: "text-dark" %></li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Більше Підбірок", selections_path, class: "btn btn-action" %>
  </div>
</div>

<div class="main-page-block">
  <h1>Календар Іменин</h1>

  <div class="mb-5">
    <h4 class="mb-3">Вибрати за місяцем</h4>
    <% @name_days_months.each do |month| %>
      <%= link_to month, name_days_path(by_month: month), class: "btn btn-plain" %>
    <% end %>
  </div>

  <div class="row">
    <div class="col-md-6 mb-5">
      <div class="celebration-box">
        <% if @name_day_today %>
          <h4 class="mb-3">Іменини сьогодні <%= @name_day_today.human_day_month %> відзначають:</h4>
          <p><%= @name_day_today.names_list.join(", ") %></p>
        <% else %>
          <h4 class="mb-3">Іменини сьогоді</h4>
          <p>Відсутні</p>
        <% end %>
      </div>
    </div>

    <div class="col-md-6 mb-5">
      <div class="celebration-box">
        <% if @name_day_tomorrow %>
          <h4 class="mb-3">Іменини завтра <%= @name_day_tomorrow.human_day_month %>:</h4>
          <p><%= @name_day_tomorrow.names_list.join(", ") %></p>
        <% else %>
          <h4 class="mb-3">Іменини завтра</h4>
          <p>Відсутні</p>
        <% end %>
      </div>
    </div>
  </div>

  <div class="text-center">
    <%= link_to "Переглянути Всі", name_days_path, class: "btn btn-action" %>
  </div>
</div>
