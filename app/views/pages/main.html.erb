<%= render "shared/search_field" %>

<div class="main-page-block">
  <h1>Пошук</h1>

  <div class="mb-5">
    <% @categories.each do |category| %>
      <%= link_to category, names_path(category: category), class: "btn btn-plain" %>
    <% end %>
  </div>

  <div class="mb-5">
    <h4 class="mb-3">За алфавітом</h4>
    <% @alphabet.each do |letter| %>
      <%= link_to letter, names_path(letter: letter), class: "btn btn-plain btn-letter" %>
    <% end %>
  </div>

  <div class="mb-5">
    <h4 class="mb-3">За походженням</h4>
    <% @origin_countries.each do |origin| %>
      <%= link_to origin.uk_title_plural, names_path(origin_country_id: origin.id), class: "btn btn-plain" %>
    <% end %>
  </div>

  <%= link_to "До спску всіх імен", names_path, class: "btn btn-action" %>
</div>

<div class="main-page-block">
  <h1>Популярні</h1>

  <div class="row">
    <div class="col">
      <h4 class="mb-3">Топ чоловічих імен</h4>
    </div>

    <div class="col">
      <h4 class="mb-3">Топ жіночих імен</h4>
    </div>
  </div>
</div>